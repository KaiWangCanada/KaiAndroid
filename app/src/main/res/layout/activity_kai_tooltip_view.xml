<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="kai.kaiprivate.thirdparty.KaiTooltipView">

    <Button
        style="@style/tv_center_60"
        android:id="@+id/btn"
        android:text="click"
        android:layout_centerVertical="true"
        />

    <com.venmo.view.TooltipView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:text="Your text here! Your text here!Your text here!Your text here!Your text here! Your text here!Your text here!Your text here!Your text here! Your text here!Your text here!Your text here!"
        app:tooltipColor="#66009900"
        app:anchoredView="@id/btn"
        android:layout_above="@+id/btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
