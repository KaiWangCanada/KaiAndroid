<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:shrinkMode="strict">

    <style name="MeimeifaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/toolbar</item>
        <item name="android:textColorPrimary">@color/toolbar</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@drawable/welcome</item>-->
    </style>
    <style name="meimeifaTheme.translucent" parent="MeimeifaTheme">
        <!--These values must be set for this mechanism to work-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="gender">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dip</item>
        <item name="android:paddingLeft">@dimen/padding_3</item>
        <item name="android:paddingRight">@dimen/padding_3</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">@dimen/margin_5</item>
    </style>

    <style name="stylist_service">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/icon_choosed</item>
        <item name="android:drawablePadding">@dimen/salon_service_draw_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/margin_5</item>
    </style>

    <style name="base_style_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="text_120_16sp" parent="base_style_wrap_content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_120</item>
    </style>
    <style name="text_120_14sp" parent="base_style_wrap_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_120</item>
    </style>
    <style name="text_while_16sp" parent="base_style_wrap_content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_80_16sp" parent="base_style_wrap_content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_80</item>
    </style>

    <style name="text_40_16sp" parent="base_style_wrap_content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_40</item>
    </style>
    <style name="text_40_14sp" parent="base_style_wrap_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_40</item>
    </style>
    <style name="text_40_16sp_bold" parent="text_40_16sp">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="price_green" parent="base_style_wrap_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/price_green</item>
    </style>
    <style name="text_120_16sp_center" parent="text_120_16sp">
        <item name="android:gravity">center</item>
    </style>


    <style name="rating_star_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>


    <style name="no_rating">
        <item name="android:text">@string/no_rating</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>
    <style name="edit_user">
        <item name="android:padding">10dip</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:textColorHint">#88FFFFFF</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>
    <style name="btn_white">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:background">@drawable/btn_border</item>
        <item name="android:paddingLeft">40dip</item>
        <item name="android:paddingRight">40dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_white_center">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:background">@drawable/btn_border</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="popup_view_anim">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>
</resources>