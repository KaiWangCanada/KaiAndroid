<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_photo_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pic_capture"
        android:gravity="center"
        android:textSize="@dimen/text_18"
        android:textColor="@color/text_116"
        android:text="@string/photo_taking" />

    <TextView
        android:id="@+id/tv_photo_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_photo_graph"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_pic_capture"
        android:gravity="center"
        android:textColor="@color/text_116"
        android:textSize="@dimen/text_18"
        android:text="@string/photo_album" />

    <TextView
        android:id="@+id/tv_photo_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tv_photo_album"
        android:background="@drawable/bg_pic_cancel"
        android:gravity="center"
        android:textColor="@color/logout_red"
        android:textSize="@dimen/text_18"
        android:text="@string/cancel" />
</merge>